{{#partial "navbar"}}
    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
    <li class="nav-item"><a class="nav-link" href="/heroes/new">Recruit a New Hero</a></li>
    <li class="nav-item"><a class="nav-link" href="/squads/new">Create a New Squad</a></li>
    <li class="nav-item"><a class="nav-link" href="/heroes">All Heroes & Squads</a></li>
{{/partial}}


{{#partial "content"}}
    <form action="/squads/{{squad.squadId}}/update" method="post">
        <h3 class="text-center"><u>Want to add more here?</u></h3>
        <p class="text-center">Remember the limit is 3 heroes per squad</p>
        <div class="form-group">
            <label for="addHero">Add Hero</label>
            <select class="form-control" id="addHero" name="addHero">
                {{#if nonMembers}}
                    {{#each nonMembers}}
                        <option>{{name}}</option>
                    {{/each}}
                {{else}}
                    <option>No more heroes available</option>
                {{/if}}
            </select>
        </div>
        {{#if nonMembers}}
            <button type="submit" class="btn btn-outline-primary">Save</button>
        {{/if}}
    </form>

{{/partial}}
{{> layout.hbs}}